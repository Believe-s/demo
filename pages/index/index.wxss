/* 活动标题 */
.title{
  font-size: 28rpx;
  color: #3C3C3C;
  font-weight: 500; 
  line-height: 1;
  padding: 30rpx;
}
.item{
  margin-bottom: 20rpx;
}
.item image{
  width: 750rpx;
  height: 320rpx;
}
.item .info{
  height: 180rpx;
  position: relative;
  padding: 16rpx 130rpx 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.item .info .name{
  font-size: 30rpx;
  color: #3C3C3C;
}
.item .info .extra{
  font-size: 22rpx;
  color: #b4b4b4;
  position: absolute;
  bottom: 20rpx;
}
.item .info .status{
  position: absolute;
  top: 16rpx;
  right: 30rpx;
  font-size: 30rpx;
  color: #fe6249;
}